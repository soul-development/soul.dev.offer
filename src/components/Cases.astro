---
import type { TLangText } from '../i18n'
export interface Props {
  t: TLangText
}
const { t } = Astro.props
import case1 from '../assets/case_1.png'
import case2 from '../assets/case_2.png'
import case3 from '../assets/case_3.png'
import { Image } from 'astro:assets'
---

<div class="cases">
  <div>
    <h3>{t.cases.title}</h3>
    <div class="links">
      <a href="https://t.me/LeelaDevalokabot" target="_blank">@LeelaDevalokabot</a>
      <a href="https://t.me/Energy_Desenko_bot" target="_blank">@Energy_Desenko_bot</a>
      <a href="https://t.me/contentville_transcript_bot" target="_blank">
        @contentville_transcript_bot
      </a>
      <a href="https://t.me/VoiceAuthor_bot" target="_blank">@VoiceAuthor_bot</a>
      <a href="https://for-your-home.vercel.app/ru/category/plastic-arts/6" target="_blank">
        fyhart.site
      </a>
    </div>
  </div>
  <div class="cases-list">
    <div class="case-img">
      <Image src={case1} alt="Devaloka case" quality={100} />
    </div>
    <div class="case-img">
      <Image src={case2} alt="Devaloka case" quality={100} />
    </div>
    <div class="case-img">
      <Image src={case3} alt="Devaloka case" quality={100}/>
    </div>
  </div>
</div>
<style>
  .cases {
    margin-top: 35px;
    h3 {
      font-size: 16px;
      color: var(--color-primary);
    }
    display: flex;
    justify-content: space-between;
  }
  .links {
    margin-top: 20px;
    display: flex;
    align-items: flex-start;
    flex-direction: column;
    gap: 6px;
  }
  .case-img {
    width: 250px;
    position: relative;
    aspect-ratio: 107 / 219;
    img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  }
  .cases-list {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    gap: 8px;
  }
</style>
